</div>

{{#contentFor "scripts"}}
<script>
    document.getElementById('volunteerForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Qui potresti aggiungere la logica per inviare i dati al server
        // Per ora mostriamo semplicemente il modale di conferma
        document.getElementById('confirmationModal').style.display = 'block';
    });

    // Gestione del modale di conferma
    const modal = document.getElementById('confirmationModal');
    const closeBtn = document.getElementsByClassName('close')[0];
    const closeModalBtn = document.getElementById('closeConfirmationModal');

    closeBtn.onclick = function() {
        modal.style.display = 'none';
    }

    closeModalBtn.onclick = function() {
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }
</script>
{{/contentFor}}
